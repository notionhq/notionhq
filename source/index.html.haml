#main
  
  .container

    #masthead
      %h1#name Notion

  #person_detail
    .container
      #details
        - data.members.each do |shrt, person|
          %div{:class => "#{shrt} person"}
            .bio
              %h3= person['full_name']
              %p= person['desc']
            .connect
              %a.twit{:href => "#"}== @#{person['twitter']}
              %a.mail{:href => "mailto:#{}"}= person['email']

  .container
    #people
      - data.members.each do |shrt, person|
        .circle{"class" => shrt, "data-name" => shrt}
          .pic
          .name
            = person['full_name'][0..(person['full_name'].index(" ") + 1)]


  %h2#location PORTLAND &nbsp; SANTA BARBRA


